{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>
                        <p>
                            <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-primary btn-xs">Details</a>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-default btn-xs">Edit</a>
                        </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
