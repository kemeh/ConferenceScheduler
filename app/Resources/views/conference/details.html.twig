{% extends 'base.html.twig' %}

{% block main %}
    <h2>{{ conference.topic }}</h2>
    <div class="container">
        <ul class="nav nav-tabs">
            <li class="nav active"><a href="#A" data-toggle="tab">Home</a></li>
            <li class="nav"><a href="#B" data-toggle="tab">Programme</a></li>
            <li class="nav"><a href="#C" data-toggle="tab">Lecturers</a></li>
            <li class="nav"><a href="#D" data-toggle="tab">Venue</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane fade in active" id="A">{{ conference.description }}</div>
            <div class="tab-pane fade" id="B"></div>
            <div class="tab-pane fade" id="C">{{ conference.venue.getName() }}</div>
            <div class="tab-pane fade" id="D">{% include 'venue/details.html.twig' with {'venue': conference.venue} %}</div>
        </div>
    </div>
{% endblock %}

